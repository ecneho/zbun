{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "paths": {
            "@configuration/*": ["./configuration/*"],
            "@locales": ["./locales/index.ts"],
            "@utils": ["./utils/index.ts"],
            "@assets": ["./assets/*"],
        }
    },
    "include": ["src/**/*.ts"],
}